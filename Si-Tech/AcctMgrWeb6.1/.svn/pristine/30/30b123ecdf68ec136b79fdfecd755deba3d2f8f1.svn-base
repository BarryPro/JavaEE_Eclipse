<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE sqlMap      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="cct_creditchg_detail">

    <typeAlias alias="CreditDetailEntity" type="com.sitech.acctmgr.atom.domains.cct.CreditDetailEntity"/>
	<select id="qCreditChgDetail" parameterClass="Map" resultClass="CreditDetailEntity">
		SELECT CODE_TYPE codeType, CODE_VALUE codeValue, CODE_POINT codePoint, CODE_NAME codeName FROM
		CCT_CREDITCHG_DETAIL WHERE ID_NO=#ID_NO#
		<dynamic prepend="">
    		<isNotEmpty prepend="" property="SUFFIX">
    		   and CODE_TYPE $SUFFIX$
    		</isNotEmpty>
    	</dynamic>
	</select>
	
	<select id="qryByCodeType" parameterClass="Map" resultClass="java.util.HashMap">
		SELECT nvl(sum(code_point),0) CODE_POINT FROM
		CCT_CREDITCHG_DETAIL WHERE ID_NO=#ID_NO# and code_type $SUFFIX$
	</select>

	<delete id="dCreditDetail" parameterClass="Map">
		DELETE CCT_CREDITCHG_DETAIL WHERE ID_NO=#ID_NO#
	</delete>
</sqlMap>
  
   