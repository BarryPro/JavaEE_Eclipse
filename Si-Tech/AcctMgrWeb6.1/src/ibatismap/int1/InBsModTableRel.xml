 </cacheModel>
    
  <select id="qTableNameContentByMainSvcAction" parameterClass="Map" resultClass="java.util.HashMap" cacheModel="svccfg_cache">  
	SELECT TABLE_NAME,ODR_SAVE_CODE,ORDER_SOURCE,TEMPLATE_CONTENT,ORDER_TYPE 
	FROM   IN_BSMODTABLE_REL 
	WHERE  ACTION_ID=#MAIN_ACTION_ID#
	AND    MAIN_SVC=#MAIN_SVC_ID#
  </select>
    
</sqlMap>