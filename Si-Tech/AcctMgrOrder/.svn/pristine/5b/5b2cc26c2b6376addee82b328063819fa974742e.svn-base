package com.sitech.acctmgr.app.common;

import java.io.InputStreamReader;
import java.io.LineNumberReader;

public class RunCommand {
	
	/**
	 * 
	 * @param cmd
	 * @param tp 1:返回执行结果 非1:返回执行后的输出
	 * @return
	 */
	public String runCommand(String cmd, int tp) {
		StringBuffer buf = new StringBuffer(1024);
		String rt = "-1";
		
		try {
			Process pos = Runtime.getRuntime().exec(cmd);
			pos.waitFor();
			if (tp == 1) {
				if (pos.exitValue() == 0) {
					rt = "1";
				}
			} else {
				InputStreamReader ir = new InputStreamReader(pos.getInputStream());
				LineNumberReader input = new LineNumberReader(ir);
				String In = "";
				while ((In = input.readLine()) != null) {
					buf.append(In).append("\n");
				}
				rt = buf.toString();
				input.close();ir.close();
			}
		} catch (Exception e) {
			// TODO: handle exception
			rt = e.getMessage();
		}
		return rt;
	}
}
